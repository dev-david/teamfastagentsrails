<h1>Listing properties</h1>

<table class="table table-hover">
  <tr>
    <th>Number</th>
    <th>Unit</th>
    <th>Address</th>
    <th>Address2</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Rooms</th>
    <th>Bathrooms</th>
    <th>Sqft</th>
    <th>Lot</th>
    <th>Description</th>
    <th>Price</th>
    <th>Banner</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @properties.each do |property| %>
  <tr>
    <td><%= property.number %></td>
    <td><%= property.unit %></td>
    <td><%= property.address %></td>
    <td><%= property.address2 %></td>
    <td><%= property.city %></td>
    <td><%= property.state %></td>
    <td><%= property.zip %></td>
    <td><%= property.rooms %></td>
    <td><%= property.bathrooms %></td>
    <td><%= property.sqft %></td>
    <td><%= property.lot %></td>
    <td><%= property.description %></td>
    <td><%= property.price %></td>
    <td><%= property.banner %></td>
    <td><%= link_to 'Show', property %></td>
    <td><%= link_to 'Edit', edit_property_path(property) %></td>
    <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

